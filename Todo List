            align-items: center;
            height: 100vh;
            margin: 0;
            color: #fff;
        }
        .container {
            background: rgba(255, 255, 255, 0.1);
            padding: 1.5rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }
        input {
            width: calc(100% - 80px);
            padding: 10px;
            border-radius: 8px;
            border: none;
            outline: none;
            font-size: 1rem;
            margin-right: 10px;
        }
        button {
            padding: 10px;
            border-radius: 8px;
            border: none;
            background: #ff4757;
            color: #fff;
            font-size: 1rem;
            cursor: pointer;
            transition: 0.3s;
        }
        button:hover {
            background: #e84118;
        }
        .task-list {
            margin-top: 20px;
        }
        .task {
            background: rgba(255, 255, 255, 0.2);
